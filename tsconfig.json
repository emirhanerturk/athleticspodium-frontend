{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@services/*": [
        "src/app/core/services/*"
      ],
      "@enums/*": [
        "src/app/core/enums/*"
      ],
      "@pipes/*": [
        "src/app/core/pipes/*"
      ],
      "@interfaces/*": [
        "src/app/core/interfaces/*"
      ],
      "@models/*": [
        "src/app/core/models/*"
      ],
      "@directives/*": [
        "src/app/core/directives/*"
      ],
      "@guards/*": [
        "src/app/core/guards/*"
      ],
      "@decorators/*": [
        "src/app/core/decorators/*"
      ],
      "@interceptors/*": [
        "src/app/core/interceptors/*"
      ],
      "@layouts/*": [
        "src/app/shared/layouts/*"
      ],
      "@env/*": [
        "src/environments/*"
      ],
      "@core/*": [
        "src/app/core/*"
      ],
      "@modules/*": [
        "src/app/modules/*"
      ],
      "@shared/*": [
        "src/app/shared/*"
      ]
    },
    "useDefineForClassFields": false
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
